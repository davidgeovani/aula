<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:id="@+id/pics_cardview"
        android:layout_width="match_parent"
        android:layout_height="492dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/ubs_txt_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="8dp"
                android:text="@{ubs.nome}"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ubs_txt_endereco"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ubs_txt_nome"
                android:ellipsize="end"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="@{ubs.endereco}" />

            <TextView
                android:id="@+id/ubs_txt_map"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ubs_txt_endereco"
                android:autoLink="map"
                android:ellipsize="end"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="@{ubs.mapa}" />

            <TextView
                android:id="@+id/ubs_txt_fone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ubs_txt_map"
                android:ellipsize="end"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="@{ubs.fone}" />



        </RelativeLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>